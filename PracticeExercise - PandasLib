
import pandas as pd
import numpy as np

# ðŸ“Œ 1. Crear un DataFrame simulado
data = {
    "Producto": ["Mouse", "Teclado", "Monitor", "Mouse", "Monitor", "Teclado"],
    "Precio": [20, 50, 200, 25, np.nan, 55],
    "Cantidad": [5, 3, 2, 7, 1, 4],
    "Categoria": ["Accesorios", "Accesorios", "Pantallas", "Accesorios", "Pantallas", "Accesorios"]
}

df = pd.DataFrame(data)

# ðŸ“Œ 2. Explorar los datos
print("Primeras filas:\n", df.head())
print("\nInformaciÃ³n general:\n")
df.info()

# ðŸ“Œ 3. Manejo de valores nulos
df["Precio"].fillna(df["Precio"].mean(), inplace=True)

# ðŸ“Œ 4. Crear una nueva columna
df["Total"] = df["Precio"] * df["Cantidad"]

# ðŸ“Œ 5. EstadÃ­sticas descriptivas
print("\nEstadÃ­sticas de precios y totales:\n", df[["Precio", "Total"]].describe())

# ðŸ“Œ 6. Agrupamiento por categorÃ­a
ventas_categoria = df.groupby("Categoria")["Total"].sum()
print("\nVentas por categorÃ­a:\n", ventas_categoria)

# ðŸ“Œ 7. Filtrar productos con total mayor a 100
print("\nProductos con ventas > 100:\n", df[df["Total"] > 100])
